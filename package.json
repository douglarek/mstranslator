{
    "name": "mstranslator",
    "displayName": "MSTranslation",
    "description": "A translator using Microsoft Translator",
    "version": "0.0.1",
    "publisher": "douglarek",
    "repository": {
        "url": "https://github.com/douglarek/mstranslator"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:mstranslator.translate"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "mstranslator.translate",
                "title": "MSTranslator: Translate"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "request-promise": "^4.2.1",
        "@types/request-promise": "^4.1.36"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
